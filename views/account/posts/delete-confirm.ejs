<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>既存記事削除確認</title>

  <%- include("../../_share/stylesheets.ejs") %>
</head>

<body>

  <%- include("../../_share/navbar.ejs") %>

    <main role="main" class="container">

      <div class="border-bottom mt-5 mb-5">
        <h1>記事削除確認</h1>
      </div>
      <form>
        <div class="form-group row">
          <label for="url" class="col-sm-2 col-form-label">URL:</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="url" name="url" value="<%= url %>" />
          </div>
        </div>
        <div class="form-group row">
          <label for="title" class="col-sm-2 col-form-label">タイトル:</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="title" name="title" value="<%= title %>" />
          </div>
        </div>
        <div class="form-group row">
          <label for="content" class="col-sm-2 col-form-label">本文:</label>
          <div class="col-sm-10">
            <textarea type="text" readonly class="form-control-plaintext" id="content" name="content" rows="6"><%= content %></textarea>
          </div>
        </div>
        <div class="form-group row">
          <label for="keywords" class="col-sm-2 col-form-label">キーワード:</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="keywords" name="keywords" value="<%= keywords %>" />
          </div>
        </div>
        <div class="form-group row">
          <label for="authors" class="col-sm-2 col-form-label">著者:</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="authors" name="authors" value="<%= authors %>" />
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-1">
            <button type="submit" class="btn btn-primary" data-method="POST" data-action="/account/posts/<%= _id %>/delete/execute">削除</button>
          </div>
          <div class="col-sm-1">
            <button type="submit" class="btn btn-secondary" data-method="GET" data-action="/account/posts/search">戻る</button>
          </div>
        </div>
      </form>

    </main>

    <%- include("../../_share/javascripts.ejs") %>
    <script src="/public/javascripts/account/posts/regist.js"></script>
</body>

</html>