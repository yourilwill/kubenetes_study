<form class="card mt-3 mb-3">
  <div class="row no-gutters">
    <div class="card-body">
      <h5 class="card-title"><%= title %></h5>
      <p class="card-text"><%= content %></p>
    </div>
    <div class="col-md-2">
      <div class="card-body text-center">
        <button type="submit" data-method="POST" data-action="/account/posts/<%= _id %>/edit/input" class="btn btn-primary"><i
          class="fas fa-edit"></i></button>
        <button type="submit" data-method="POST" data-action="/account/posts/<%= _id %>/delete/confirm" class="btn btn-primary"><i
          class="fas fa-trash-alt"></i></button>
      </div>
    </div>
  </div>
</form>